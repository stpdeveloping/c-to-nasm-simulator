<Window x:Class="C_to_NASM_Simulator_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:C_to_NASM_Simulator_2._0"
        mc:Ignorable="d"
        Title="C to NASM Simulator" Height="450" Width="800" FontFamily="Segoe UI Semilight" Icon="Resources/icon.png" 
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <RichTextBox x:Name="InputText" Grid.Column="1" Grid.Row="1" FontSize="15" TextChanged="InputText_TextChanged" />
        <Button x:Name="CompileButton" Height="30" Content="Compile" 
                Grid.Column="1" Grid.Row="2" Margin="0, 12, 0, 0" FontSize="16" Click="CompileButton_Click"/>
        <ListView x:Name="OutputList" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Width="194" Margin="12, 0, 0, 0">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <WrapPanel>
                        <TextBlock Text="{Binding}"/>
                    </WrapPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Window>
